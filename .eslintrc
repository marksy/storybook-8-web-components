{
    "root": true,
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "extends": [
        "plugin:@stencil-community/recommended",
        "plugin:prettier/recommended" // Enables eslint-plugin-prettier and eslint-config-prettier. This will display prettier errors as ESLint errors. Make sure this is always the last configuration in the extends array.
    ],
    "ignorePatterns": [
        "**/*.spec.*",
        "**/*.e2e.*",
        "src/tests/*",
        "./storybook",
        "./storybook/*",
        "./stencil.config.js",
        "**/*.stories.*",
        "**/*.d.ts",
        "./src/tokens/*"
    ],
    "rules": {
        "react/react-in-jsx-scope": 0,
        "react/no-unescaped-entities": 0,
        "react/no-unknown-property": 0,
        "react/jsx-no-bind": 0,
        "react/jsx-closing-bracket-location": 0,
        "react/jsx-one-expression-per-line": 0,
        "import/prefer-default-export": 0,
        "function-paren-newline": 0,
        "linebreak-style": 0,
        "max-len": 0,
        "no-restricted-syntax": 0,
        "react/jsx-tag-spacing": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "jsx-a11y/click-events-have-key-events": 0,
        "object-curly-spacing": 0,
        "object-curly-newline": 0,
        "import/no-extraneous-dependencies": 0,
        "@typescript-eslint/lines-between-class-members": 0,
        "@typescript-eslint/naming-convention": 0,
        "@typescript-eslint/indent": 0,
        "@stencil-community/required-jsdoc": 0,
        "@stencil-community/strict-boolean-conditions": 0,
        "@stencil-community/prefer-vdom-listener": 0,
        "@stencil-community/ban-exported-const-enums": 0,
        "@stencil-community/strict-mutable": 0,
        "@stencil-community/ban-default-true": 1,  // remove this and fix up the issues
        "@stencil-community/own-methods-must-be-private": 1,  // remove this and fix up the issues
        "@stencil-community/own-props-must-be-private": 1,  // remove this and fix up the issues
        "@stencil-community/reserved-member-names": 1 // remove this and fix up the issues
    }
}
