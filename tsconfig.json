{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015", "es2017", "es2019", "es2021"],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h",
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "stripInternal": true,
        "types": ["node", "jest"]
    },
    "include": ["src", "types/jsx.d.ts", "./.storybook/typings.d.ts", "./stencil.config.ts"],
    "exclude": ["node_modules", "**/*.stories.*", "src/react-types.d.ts", "react.d.ts"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}